<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivSalesSkinClan"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSalesSkinClanId"
        app:srcCompat="@drawable/aaa_skin_clan_124" />

    <TextView
        android:id="@+id/textSalesSkinClanId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="SKIN: 2"
        android:textColor="@color/primaryRed"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/ivSalesSkinClan"
        app:layout_constraintStart_toStartOf="@+id/ivSalesSkinClan"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textSalesSkinClanPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:text="PreÃ§o: R$15,00 reais"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ivSalesSkinClan"
        app:layout_constraintStart_toStartOf="@+id/ivSalesSkinClan"
        app:layout_constraintTop_toBottomOf="@+id/ivSalesSkinClan" />
</androidx.constraintlayout.widget.ConstraintLayout>